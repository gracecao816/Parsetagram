<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <ImageView
        android:id="@+id/ibProfileImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/empty_image" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_below="@+id/ibHeart"
        android:text="Username" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="248dp"
        android:layout_height="18dp"
        android:layout_below="@+id/tvUsername"
        android:layout_centerHorizontal="true"
        android:text="Caption" />

    <ImageButton
        android:id="@+id/ibHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ibProfileImage"
        android:layout_below="@+id/ibProfileImage"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ufi_heart" />


    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvUsername"
        android:layout_below="@+id/ibProfileImage"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivDirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibProfileImage"
        android:layout_marginStart="135dp"
        app:srcCompat="@drawable/direct" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ibProfileImage"
        android:layout_below="@+id/ibProfileImage"
        app:srcCompat="@drawable/ufi_save" />

    <ImageButton
        android:id="@+id/ibProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/placeholderprofile" />

</RelativeLayout>